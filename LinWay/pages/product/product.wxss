/* pages/product/product.wxss */
.lower {
  position: fixed;
  width: 20%;
  height: 100%;

  padding-top: 8%;
  
  background-color: #f5f5f5;
  color: #939393;
}

.lower .lower_scroll {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  position: relative;
  height: 100%;

  padding-top: 4%;
}

.lower .lower_item {
  padding-left: 5%;
  padding-top: 3%;
  padding-bottom: 3%;

  display: flex;
  flex-direction: column;
  align-items: center;

  overflow: hidden;

  font-size: large;

  border-bottom: solid;
  border-color: #dbdbdb;
}

.lower .lower_item.active {
  background-color: #ffffff;
}

.upper {
  position: fixed;
  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  
  background-color: #ffffff;
  color: #000000;

  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.upper .head {
  position: relative;

  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;

  background-color: #f5f5f5;
  color: #000000;

  padding-top: 5%;
  padding-bottom: 5%;
  padding-left: 2%;
  padding-right: 2%;
}

.upper .head .nav_switch {
  width: 10%;
  height: 10%;
}

.upper .head .nav_title {
  width: 100%;
  height: 10%;

  font-style: normal;
  font-size: larger;
  font-weight: bold;
  text-align: center;

  padding-right: 10%;
}

.upper.shift {
  transform: rotate(0deg) scale(1) translate(20%,0%);
  -webkit-transform: rotate(0deg) scale(1) translate(20%,0%); 
}

.upper .scroll_body{
  position: relative;
  width: 100%;
  height: 95%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.upper .body {
  position: relative;
  width: 100%;
}

.upper .body .series_box {
  position: relative;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  width: 100%;
}

.upper .body .series_box .series_title {
  font-style: normal;
  font-size: large;
  font-weight: lighter;
  text-align: center;

  border-style: solid;
  border-width: thin;
}

.upper .body .series_box .items_box {
  position: relative;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

  width: 100%;
  
  margin-bottom: 40rpx;
}

.upper .body .series_box .items_box .item {
  position: relative;

  display: flex;
  flex-direction: column;

  width: 300rpx;
  height: 400rpx;

  margin-top: 40rpx;
  margin-left: 40rpx;
}

.upper .body .series_box .items_box .item .item_image {
  width: 100%;
}

.upper .body .series_box .items_box .item .item_text {
  width: 100%;
  font-style: normal;
  font-size: medium;
  font-weight: lighter;
  text-align: center;
  padding-top: 5%;
}